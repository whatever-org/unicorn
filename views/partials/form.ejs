<div class="row">
    <form class="col s8 offset-s2" action="/" method="POST">
        <div class="row">
            <div class="input-field col s6">
                <input name="name" id="name" type="text" class="validate">
                <label for="name">Name</label>
            </div>
            <div class="input-field col s6">
                <input name="birthday" id="bithday" type="text" class="datepicker">
                <label for="bithday">Birthday</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input name="weight" id="weight" type="number" class="validate">
                <label for="weight">Weight</label>
            </div>
            <p>
              <input name="gender" type="radio" id="gender1" value="f" checked />
              <label for="gender1">Female</label>
            </p>
            <p>
              <input name="gender" type="radio" id="gender2" value="m" />
              <label for="gender2">Male</label>
            </p>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input name="vampireKilled" id="vampireKilled" type="text" class="validate">
                <label for="vampireKilled">Vampires Killed</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="mdi-content-send right"></i>
        </button>
    </form>
</div>