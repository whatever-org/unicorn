<% if(messages.success) { %>
    <script type="text/javascript">
        Materialize.toast("<%= messages.success %>", 3000);
    </script>
<% } %>

<% if(messages.error) { %>
    <script type="text/javascript">
        Materialize.toast("<%= messages.error %>", 3000);
    </script>
<% } %>

<% if(messages.info) { %>
    <script type="text/javascript">
        Materialize.toast("<%= messages.info %>", 3000);
    </script>
<% } %>